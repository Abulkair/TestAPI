{
    "ConnectionStrings": {
      "DefaultConnection": "Server=your_server;Database=FlightStatusDb;User Id=your_user;Password=your_password;"
    },
    "Jwt": {
      "Key": "your_secret_key",
      "Issuer": "your_issuer",
      "Audience": "your_audience"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console" ],
      "MinimumLevel": "Information",
      "WriteTo": [
        { "Name": "Console" }
      ]
    },
    "Logging": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "AllowedHosts": "*"
  }
  